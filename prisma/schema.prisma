// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum UserStatus {
  ACTIVE
  INACTIVE
  CLOSED
}

model tblUser {
  userId        String         @id @unique @db.VarChar(36)
  firstName     String?        @db.VarChar(100)
  middleName    String?        @db.VarChar(100)
  lastName      String?        @db.VarChar(100)
  phone         String?        @unique @db.VarChar(10)
  countryCode   Int?           @db.Int
  userStatus    UserStatus     @default(ACTIVE)
  tblCredential tblCredential?
}

model tblCredential {
  credId    Int      @id @default(autoincrement())
  user      tblUser  @relation(fields: [userId], references: [userId])
  userId    String   @unique @db.VarChar(36)
  email     String   @unique @db.VarChar(100)
  password  String?  @db.VarChar(255)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ComponentCategory {
  NEWS
  NOTICE
  GALLERY
  EVENT
  DOWNLOAD
}

model tblComp {
  compId       Int               @id @default(autoincrement())
  compCategory ComponentCategory
  title        String?           @db.VarChar(255)
  desc         String?           @db.VarChar(255)
  popUp        String?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
}
model tblContact {
  conId       Int               @id @default(autoincrement())
  name     String    @db.VarChar(100)
  email     String    @db.VarChar(100)
  phone         String?       @db.VarChar(10)
  subject        String?           @db.VarChar(255)
  desc         String?           @db.VarChar(255)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
 
}
model tblVacancy {
  vacId       Int               @id @default(autoincrement())
  title        String?           @db.VarChar(255)
  position         String?           @db.VarChar(255)
  qualification         String?           @db.VarChar(255)
  jobDesc         String?           @db.VarChar(255)
  salary         String?           @db.VarChar(255)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
 
}

model tblAlbum {
  albumId    Int      @id @default(autoincrement())
  albumName String?   @db.VarChar(255)
  desc      String?   @db.VarChar(255)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  tblPhoto  tblPhoto[]
}

model tblPhoto {
  photoId   Int      @id @default(autoincrement())
  album     tblAlbum @relation(fields: [albumId], references: [albumId])
  albumId   Int   @db.Int
 
  fileNames String?  @db.LongText
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([albumId])
}

